<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ethioroot.selfcare.ethioselfcare">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MANAGE_OWN_CALLS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3780418992794226~7630207731" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".AccountManager"
            android:label="@string/title_activity_account_manager"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ethioroot.selfcare.ethioselfcare.MainActivity" />
        </activity>
        <activity
            android:name=".giftApps"
            android:label="@string/title_activity_gift_apps"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ethioroot.selfcare.ethioselfcare.MainActivity" />
        </activity>
        <activity
            android:name=".GebetaActivity"
            android:label="@string/title_activity_gebeta"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ethioroot.selfcare.ethioselfcare.MainActivity" />
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FacebookActivity" />
        <activity android:name=".ProfileAcivity" />
        <activity
            android:name=".RechargeActivity"
            android:parentActivityName=".AccountManager" />
        <activity
            android:name=".TransferActivity"
            android:parentActivityName=".AccountManager" />
        <activity
            android:name=".RequestActitivy"
            android:parentActivityName=".AccountManager" />
        <activity
            android:name=".VoicePackageActivity"
            android:parentActivityName=".GebetaActivity" />
        <activity
            android:name=".DataPackageActivity"
            android:parentActivityName=".GebetaActivity" />
        <activity
            android:name=".SMSPackageActivity"
            android:parentActivityName=".GebetaActivity" />
        <activity android:name=".EmergencyActivity" />
        <activity android:name=".PermisionRequestActivity" />
        <activity android:name=".AdsActivity" />
        <activity android:name=".LoginActivity"></activity>
    </application>

</manifest>